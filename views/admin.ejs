    <link href="css/admin.css" rel="stylesheet" type = "text/css">
    <title>Admin: Users Database</title>
    <script>
        function delUser(username){
            
            console.log(username);

            $.ajax({
                    type: 'DELETE',
                    url: '/deleteuser',
                    data: {username: username},
                    async: false,
                    success:function(response){
                        location.reload();  
                    }
            });

            location.reload();  
        }

        function alterUser(username){
            var elem = prompt("What element would you like to change?");
            var change;

            if (elem == 'weight'){
                change = prompt("Please enter the new weight in Kg");
                if (isNaN(change)){
                    alert("Invalid element, please try again");
                    return;
                }
            }

            else if (elem == 'height'){
                change = prompt("Please enter the new height in cm");
                if (isNaN(change)){
                    alert("Invalid element, please try again");
                    return;
                }
            }

            else if (elem == 'dob'){
                change = prompt("Please enter the new dob in yyyy-mm-dd format");
                if (isNan(Date.parse(change))){
                    alert("Invalid element, please try again");
                    return;
                }
            }

            else if (elem == 'activity'){
                change = prompt("Please enter one of the following: Sedentary, Lightly Active, Active, Very Active");
                if (change !== 'Sedentary' || change !== 'Lightly Active' || change !== 'Active' || change !== 'Very Active'){
                    alert("Invalid element, please try again");
                    return;
                }
            }

            else if (elem == 'name'){
                change = prompt("Please enter the new name");
            }

            else if (elem == 'username'){
                change = prompt("Please enter the new username");
            }

            else if (elem == 'password'){
                change = prompt("Please enter the new password");
            }

            else{
                alert("Invalid element, please try again");
                return;
            }

            $.ajax({
                    type: 'put',
                    url: '/updateuser',
                    data: {username: username, elem: elem, change: change},
                    async: false,
                    success:function(response){
                        location.reload();
                    }
                });
            
            location.reload();
        }
    </script>
</head>
<body>
